<!DOCTYPE html>
<html lang="en">
<head>
    <title>Postify - Create Blog</title>
    <style>
      .h-textarea{
        height: 70vh;
      }
    </style>
    <%- include('./partials/head.ejs') %>
</head>
<body>
    <%- include('./partials/navbar.ejs') %>
    
    <h1 class="text-center mt-4">Create Your Blog</h1>
    <hr>

    <div class="container mt-4">
        <form  method="post" action="/blogs/create" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="exampleFormControlInput1" class="form-label">Blog title</label>
                <input type="text" name="blogTitle" class="form-control" id="exampleFormControlInput1" placeholder="name@example.com">
              </div>
              <div class="mb-3">
                <label for="coverImg" class="form-label">Cover Image</label>
                <input type="text" name="coverImg" class="form-control" id="coverImg" placeholder="Enter Your Cover Image Url">
              </div>
              <div class="mb-3">
                <label for="blogbody" class="form-label">Blog body</label>
                <textarea class="form-control h-textarea" name="blogBody" id="blogbody" rows="3"></textarea>
              </div>
              <button type="submit" class="mt-4 mx-auto d-block">Post</button>
        </form>
    </div>
    <%- include('./partials/footer.ejs') %>
    <%- include('./partials/script.ejs') %>
</body>
</html>