<!DOCTYPE html>
<html lang="en">
<head>
    <title>Postify - Create Blog</title>
    <%- include('./partials/head.ejs') %>
</head>
<body>
    <%- include('./partials/navbar.ejs') %>
    
    <h1 class="text-center mt-4">Create Your Blog</h1>
    <hr>

    <div class="container mt-4">
        <form  method="post" action="/blogs/create" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="exampleFormControlInput1" class="form-label">Blog title</label>
                <input type="text" name="blogTitle" class="form-control" id="exampleFormControlInput1" placeholder="name@example.com">
              </div>
              <div class="mb-3">
                <label for="exampleFormControlTextarea1" class="form-label">Blog body</label>
                <textarea class="form-control" name="blogBody" id="exampleFormControlTextarea1" rows="3"></textarea>
              </div>
              <div>
                <input type="file" name="coverImg" id="coverImg" />
              </div>
              <button type="submit" class="mt-4 mx-auto d-block">Upload</button>
        </form>
    </div>

    <%- include('./partials/script.ejs') %>
</body>
</html>